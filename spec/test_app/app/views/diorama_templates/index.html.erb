<% @diorama_templates.each do |diorama_template| %>
  <tr>
    <td><%= diorama_template.body %></td>
    <td><%= diorama_template.path %></td>
    <td><%= diorama_template.locale %></td>
    <td><%= diorama_template.format %></td>
    <td><%= diorama_template.handler %></td>
    <td><%= diorama_template.partial %></td>
    <td><%= link_to 'Show', diorama_template %></td>
    <td><%= link_to 'Edit', edit_diorama_template_path(diorama_template) %></td>
    <td><%= link_to 'Destroy', diorama_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

